root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 4

[{*.kt,*.kts}]
# Trailing comma 설정
ij_kotlin_allow_trailing_comma = true
ij_kotlin_allow_trailing_comma_on_call_site = true

# no-wildcard-import
# nested 설정이 정상 동작하지 않아서 아래의 star import 갯수를 1000개로 늘려서 설정함
ij_kotlin_import_nested_classes = true

ij_kotlin_name_count_to_use_star_import = 1000
ij_kotlin_name_count_to_use_star_import_for_members = 1000
